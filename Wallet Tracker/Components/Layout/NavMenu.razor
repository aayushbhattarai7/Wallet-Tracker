@inject UserService UserService
@inject NavigationManager NavigationManager
@inject TransactionService TransactionService
<div class="top-row navbar navbar-expand-lg navbar-dark bg-primary shadow">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold text-white" href="#">WalletTracker</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <NavLink class="nav-link text-white nav-hover" href="dashboard" Match="NavLinkMatch.All">
                        Dashboard
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-white nav-hover" href="transaction" Match="NavLinkMatch.All">
                        Transaction
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-white nav-hover" Match="NavLinkMatch.All" @onclick="Logout">
                        Logout
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</div>

<style>
    /* Bigger navbar styling */
    .navbar {
        padding: 1rem 1.5rem; /* Increase vertical and horizontal padding */
        font-size: 1.1rem; /* Slightly increase font size */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Add shadow for depth */
    }

    /* Adjust brand styling for a larger look */
    .navbar-brand {
        font-size: 2rem; /* Increase brand font size */
        letter-spacing: 1px;
    }

    /* Navbar links hover effect */
    .nav-hover {
        position: relative;
        transition: all 0.3s ease;
    }

    .nav-hover:hover {
        color: orange !important; /* Hover text color (orange) */
        text-shadow: 1px 1px 5px rgba(128, 128, 128, 0.8); /* Grayish text shadow effect */
    }

    /* Underline effect on hover */
    .nav-hover::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        background-color: orange; /* Orange underline */
        bottom: 0;
        left: 50%;
        transition: all 0.3s ease;
        transform: translateX(-50%);
    }

    .nav-hover:hover::after {
        width: 100%; /* Expand underline on hover */
        background-color: gray; /* Change underline to gray on hover */
    }

    /* Toggler button */
    .navbar-toggler-icon {
        filter: invert(1);
    }

    /* Active nav-link styling */
    .nav-link.active {
        color: yellow !important; /* Active link color */
        font-weight: bold; /* Bold active link */
        text-shadow: 2px 2px 8px rgba(255, 255, 255, 0.5); /* Optional: active link text shadow */
    }
</style>

@code {
    private void Logout()
    {
        TransactionService.ResetDebit(UserService.loggedInUserName);
        NavigationManager.NavigateTo("/");
    }
}